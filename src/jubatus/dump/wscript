def build(bld):
    bld.stlib(
        source = [
            'classifier.cpp',
            'recommender.cpp',
            'anomaly.cpp',
            'nearest_neighbor.cpp',
            'weight_manager.cpp',
            'column_table.cpp',
            'labels.cpp',
            ],
        target = 'jubatus_dump'
        )

    def make_test(src):
        bld.program(
            features = 'gtest',
            target = src[0: src.find('.')],
            source = src,
            use = 'jubatus_dump JUBATUS_CORE',
            )

    make_test('types_test.cpp')
    make_test('classifier_test.cpp')
    make_test('weight_manager_test.cpp')
